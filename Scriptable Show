let widget = new ListWidget();

// 设置背景图片
let backgroundImgURL = "https://s2.loli.net/2024/12/27/OSVE1tRTYBFscmI.png";
let backgroundImgReq = new Request(backgroundImgURL);
try {
    let backgroundImg = await backgroundImgReq.loadImage();
    widget.backgroundImage = backgroundImg;
} catch (error) {
    console.log("加载背景图片出错: " + error);
}

// 创建一个竖直布局的stack用于放置文本，使其位于中间位置
let textStack = widget.addStack();
textStack.layoutVertically();
textStack.centerAlignContent();

// 获取屏幕宽度和高度（示例，具体根据实际环境获取准确屏幕尺寸属性）
let screenWidth = Device.width;
let screenHeight = Device.height;

// 根据屏幕尺寸计算文本stack的合适宽度和高度，这里示例设置宽度占屏幕宽度80%，高度占屏幕高度30%，可按需调整
let textStackWidth = screenWidth * 0.8;
let textStackHeight = screenHeight * 0.3;
textStack.size = new Size(textStackWidth, textStackHeight);

// 添加第一个文本并设置样式
let text1 = textStack.addText("TFOG");
text1.textColor = Color.white();
text1.font = Font.heavyRoundedSystemFont(29);

// 添加间隔，可根据需要调整间隔大小，这里设为5像素间隔
textStack.addSpacer(5);

// 添加第二个文本并设置样式
let text2 = textStack.addText("Have a nice day");
text2.textColor = Color.white();
text2.font = Font.heavyRoundedSystemFont(22);

if (config.runsInWidget) {
    Script.setWidget(widget);
} else {
    widget.presentMedium();
}
Script.complete();
